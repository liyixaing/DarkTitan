<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkhome"
    android:orientation="vertical"
    tools:context="lanjing.com.titan.activity.SecurityCenterActivity">

    <com.lxh.baselibray.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/titil_view_height"
        android:background="@color/darkhome"
        app:ivLeftPic="@mipmap/icon_page_return_white"
        app:titleTextColor="@color/white"
        app:tvTitleText="@string/security_center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:drawableRight="@mipmap/icon_open"
            android:drawablePadding="@dimen/dp_10"
            android:foreground="@drawable/bg_white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:text="@string/phone"
            android:textColor="#4E5E90"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_phone_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_50"
            android:text="@string/binding"
            android:textColor="#8D9BC5" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/bg_gray" />

    <TextView
        android:id="@+id/tv_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:drawableRight="@mipmap/icon_open"
        android:drawablePadding="@dimen/dp_10"
        android:foreground="@drawable/bg_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/login_pwd"
        android:textColor="#4E5E90"
        android:textSize="@dimen/sp_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/bg_gray" />

    <TextView
        android:id="@+id/tv_deal_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:drawableRight="@mipmap/icon_open"
        android:drawablePadding="@dimen/dp_10"
        android:foreground="@drawable/bg_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/deal_pwd"
        android:textColor="#4E5E90"
        android:textSize="@dimen/sp_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/bg_gray" />

    <TextView
        android:id="@+id/login_out_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/btn_radius_blue"
        android:foreground="@drawable/bg_white"
        android:gravity="center"
        android:text="@string/log_out"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />
</LinearLayout>
