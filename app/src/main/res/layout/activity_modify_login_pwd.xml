<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkhome"
    android:orientation="vertical"
    tools:context="lanjing.com.titan.activity.ModifyLoginPwdActivity">

    <com.lxh.baselibray.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/titil_view_height"
        android:background="@color/darkhome"
        app:ivLeftPic="@mipmap/icon_page_return_white"
        app:titleTextColor="@color/white"
        app:tvTitleText="@string/modify_login_pwd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="vertical">
        <!--原密码-->
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@null"
                android:hint="@string/old_login_pwd"
                android:inputType="textPassword"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#8D9BC5"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textSize="@dimen/sp_15" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerHorizontal="true"
            android:background="#EEEEEE" />

        <!--新密码-->
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <EditText
                android:id="@+id/ed_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@null"
                android:gravity="center|left"
                android:hint="@string/new_login_pwd"
                android:inputType="textPassword"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#8D9BC5"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textSize="@dimen/sp_15" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerHorizontal="true"
            android:background="@color/line_gray" />

        <!--新密码-->
        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <EditText
                android:id="@+id/ed_confirm_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@null"
                android:gravity="center|left"
                android:hint="@string/confirm_new_login_pwd"
                android:inputType="textPassword"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#8D9BC5"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textSize="@dimen/sp_15" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerHorizontal="true"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/btn_radius_blue"
            android:foreground="@drawable/bg_white"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>
</LinearLayout>
